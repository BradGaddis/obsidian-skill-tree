{
  "compilerOptions": {
    "baseUrl": ".",
    "sourceMap": true,
    "inlineSources": true,
    "module": "ESNext",
    "target": "ES2020",
    "allowJs": true,
    "noImplicitAny": true,
    "moduleResolution": "node",
    "importHelpers": true,
    "allowSyntheticDefaultImports": true,
    "lib": [
      "DOM",
      "ES5",
      "ES6",
      "ES7",
      "ES2020"
    ]
  },
  "typedocOptions": {
      "entryPoints": ["src/main.ts"],
      "out": "docs" 
  },  
  "include": [
    "src/**/*.ts"
  ],
}
